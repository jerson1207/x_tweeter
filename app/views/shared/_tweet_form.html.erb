<%= form_with model: Tweet.new, url: submit_form_path, method: :post, data: { turbo_frame: "tweet_reply_form"} do |f| %>
  <div class="mb-4">
    <%= f.text_area :body, placeholder: placeholder_label, class: "w-full border-0  p-4 text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center justify-end ">
    <%= f.submit button_label, class: "w-24 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
<% end %>