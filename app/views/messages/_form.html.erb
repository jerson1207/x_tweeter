<div id='message-form'>
  <%= form_with model: Message.new, url: messages_path, local: false, data: {controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |f| %>
    <div class='sticky bottom-0 bg-white p-4 border-t border-gray-200'>
      <div class='flex items-center gap-2'>
        <%= hidden_field_tag :user_id, user&.id %>
        <%= f.text_field :body, placeholder: "Type your message here", class: 'flex-1 border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring focus:border-blue-300' %>
        <%= button_tag class: "p-2 text-blue-500 hover:text-blue-700" do %>
          <i class="fa-regular fa-paper-plane text-xl"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
